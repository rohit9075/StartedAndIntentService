<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
		  package="com.rohit.servicesdemo">

	<application
		android:allowBackup="true"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:supportsRtl="true"
		android:theme="@style/AppTheme">
		<activity android:name="com.rohit.servicesdemo.MainActivity">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>

				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>

		<service android:name="com.rohit.servicesdemo.MyStartedService"/>
		<service android:name="com.rohit.servicesdemo.MyIntentService"/>

		<service android:name="com.rohit.servicesdemo.MyBoundService"/>
		<activity android:name="com.rohit.servicesdemo.SecondActivity"/>
	</application>

</manifest>